{
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
        "browser": true
    },
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "arrow-parens": "off",
        "no-mixed-operators": "off",
        "function-paren-newline": "off",
        "no-plusplus": "off",
        "no-console": "off",
        "no-bitwise": "off",
        "no-loop-func": "off",
        "no-multi-spaces": [
            "error",
            { "ignoreEOLComments": true }
        ],
        "max-len": "off",
        "linebreak-style": "off"
    }
}